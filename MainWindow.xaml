<Window x:Class="FloatingNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatingNote"
        mc:Ignorable="d"
        Title="Note Dashboard" 
        Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        
        ShowInTaskbar="False"
        Foreground="White"
        FontFamily="{x:Static local:FontLoader.NoteFontFamily}">

    <Window.Resources>
        <!-- Default to Preset 0: Mauve (Top) to Deep Purple (Bottom) -->
        <LinearGradientBrush x:Key="DashboardBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#854F6C" Offset="0.0"/>
            <GradientStop Color="#190019" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="GlassBorder" TargetType="Border">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Minimal Scrollbar -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb Background="#44FFFFFF" BorderThickness="0"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource DashboardBackgroundBrush}" CornerRadius="20" BorderBrush="#33FFFFFF" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- List -->
                <RowDefinition Height="Auto"/>
                <!-- Input Area -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="25,25,25,10">
                <StackPanel>
                    <TextBlock Text="Floating Note" FontSize="28" FontWeight="Bold" Foreground="White">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="White" BlurRadius="15" Opacity="0.4" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Manage your rotating messages" FontSize="14" Foreground="#AAFFFFFF" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Gradient Switcher -->
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="30" Height="30" Content="🎨" 
                        Background="Transparent" BorderThickness="0" 
                        Foreground="White" FontSize="16" Cursor="Hand"
                        Click="GradientButton_Click"/>
            </Grid>

            <!-- LIST -->
            <Border Grid.Row="1" Margin="20,10,20,10" Style="{StaticResource GlassBorder}">
                <ListView x:Name="RemindersList" 
                          Background="Transparent" BorderThickness="0" 
                          Foreground="White" Margin="5"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Message}" FontSize="15" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⏱ " FontSize="11" Foreground="#AAFFFFFF"/>
                                        <TextBlock Text="{Binding DurationSeconds}" FontSize="11" Foreground="#AAFFFFFF"/>
                                        <TextBlock Text="s" FontSize="11" Foreground="#AAFFFFFF"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="✏" Width="30" Height="30" Margin="0,0,5,0"
                                            Background="#22FFFFFF" Foreground="White" BorderThickness="0"
                                            Tag="{Binding}" Click="EditBtn_Click" Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="🗑" Width="30" Height="30"
                                            Background="#22FF4444" Foreground="White" BorderThickness="0"
                                            Tag="{Binding}" Click="DeleteBtn_Click" Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!-- INPUT AREA -->
            <StackPanel Grid.Row="2" Margin="20,0,20,10">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="InputMsg" Grid.Column="0" Height="40" 
                             Background="#22FFFFFF" Foreground="White" BorderThickness="0"
                             VerticalContentAlignment="Center" Padding="10,0"
                             FontSize="14" Tag="Message..."/>

                    <TextBox x:Name="InputSec" Grid.Column="2" Height="40"
                             Background="#22FFFFFF" Foreground="White" BorderThickness="0"
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                             FontSize="14" Text="5"/>
                </Grid>

                <Button x:Name="AddUpdateBtn" Content="ADD MESSAGE" Height="40"
                        Background="#44FFFFFF" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Cursor="Hand" Click="AddBtn_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <!-- FOOTER & SETTINGS -->
            <Grid Grid.Row="3" Margin="25,10,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="SETTINGS" FontSize="12" FontWeight="Bold" Foreground="#88FFFFFF" Margin="0,0,0,10"/>

                <!-- SETTINGS CONTROLS -->
                <Grid Grid.Row="1" Margin="10,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- FONT SIZE -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Font Size" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="FontSizeInput" Text="60" Width="60" Height="30" 
                                 Background="#22FFFFFF" Foreground="White" BorderThickness="0" 
                                 VerticalContentAlignment="Center" Padding="5,0,0,0"/>
                    </StackPanel>

                    <!-- CHECKBOXES (UPDATED) -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <!-- Glow Effect -->
                        <CheckBox x:Name="GlowCheckBox" 
                                  Content="Enable Glow Effect" IsChecked="True"
                                  Foreground="White" Margin="0,0,0,8"/>

                        <!-- Spotify Mode (NEW) -->
                        <CheckBox x:Name="SpotifyCheckBox" 
                                  Content="Spotify Sync Mode 🎵" IsChecked="False"
                                  Foreground="#1DB954" FontWeight="SemiBold"
                                  ToolTip="Sync lyrics from local Python server"/>
                    </StackPanel>
                </Grid>

                <!-- LAUNCH BUTTONS -->
                <StackPanel Grid.Row="3">
                    <TextBlock x:Name="ErrorText" Foreground="#FF6B6B" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10" 
                           TextWrapping="Wrap" Visibility="Collapsed"/>

                    <Button x:Name="StartButton" Content="LAUNCH FLOATING NOTE 🚀" 
                        Height="45" FontSize="14" FontWeight="Bold"
                        Background="White" Foreground="#1a2a6c" BorderThickness="0"
                        Cursor="Hand" Click="StartButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="22.5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Exit Application completely" 
                        Background="Transparent" BorderThickness="0" Foreground="#88FFFFFF"
                        Cursor="Hand" Margin="0,10,0,0" FontSize="11"
                        Click="ExitButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>